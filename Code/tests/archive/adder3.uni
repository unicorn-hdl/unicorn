main() {
	a = 01101101b;
	b = 01010101b;
    print sum: rippleAdder(a,b)[sum];
	print overflow: rippleAdder(a,b)[overflow];
	out:;
}

fA(a, b, carryIn){
	axb = a xor b;
    sum = axb xor carryIn;
    carry = (axb and carryIn) or (a and b);
	out: sum, carry;
}

rippleAdder(a<8>, b<8>){
	c[0] = 0b;

    for (i from 0 to 7){
		sum[i] = fA(a[i], b[i], c[i])[sum];
		c[i+1] = fA(a[i], b[i], c[i])[carry];
    };
	overflow = c[8];
	out: sum<8>, overflow;
}
